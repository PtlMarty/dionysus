<%# simple form for a new booking %>
<div>
  <div class="col">
    <%= simple_form_for([@service, @booking]) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="form">
          <%= f.input :start_date,
          as: :string,
          input_html: { data: { controller: "datepicker" } },
            enableTime: true %>
          <%= f.input :end_date,
            as: :string,
          input_html: { data: { controller: "datepicker" } } %>
        </div>
        <%= f.input :comment %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
