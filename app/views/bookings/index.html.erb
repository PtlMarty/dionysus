<div class="container-booking-title">
  <h1>See all Bookings</h1>
</div>

<div class="d-flex container-bookings">
    <div class="container">
      <div class="col-6">
          <h1>Who I booked</h1>
          <% if @bookings.empty? %>
            <p>No bookings yet</p>
          <% else %>
            <% @bookings.each do |booking| %>
              <div class="card">
                <div class="card-body">
                  <%= booking.user.first_name %>
                  <%= booking.user.last_name %>
                  <%= booking.start_date %>
                  <%= booking.end_date %>
                  <%= booking.comment %>
                  <%= booking.status %>
                </div>
              </div>
            <% end %>
          <% end %>
          <%= link_to "new booking",  services_path %>
        </div>
      </div>
    </div>
    <div class="container">
          <div class="col-6">
            <h1>Bookings as provider</h1>
            <% if @my_bookings_as_provider.empty? %>
              <p>No bookings yet</p>
            <% else %>
              <% @my_bookings_as_provider.each do |booking| %>
                <div class="card">
                  <div class="card-body">
                    <%= booking.user.first_name %>
                    <%= booking.user.last_name %>
                    <%= booking.start_date %>
                    <%= booking.end_date %>
                    <%= booking.comment %>
                    <%= booking.status %>
                  </div>
                </div>
              <% end %>
            <% end %>
            <%= link_to "new booking",  services_path %>
          </div>
      </div>
    </div>
</div>
