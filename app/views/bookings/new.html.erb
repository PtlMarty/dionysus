<%# simple form for a new booking %>
<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for([@service, @booking]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.input :comment %>
          <%= f.input :status %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
