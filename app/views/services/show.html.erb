<div class="container">
  <div class="card-show">
    <%= image_tag "bottles.jpg" %>
    <div class="card-show-infos">
      <div>
        <h2><%= @service.name %></h2>
        <p>
          <i class="fa-solid fa-user"></i> Wine Expert <%= @service.user.first_name %> <%= @service.user.last_name %>
        </p>
      </div>
      <h2 class="card-show-pricing"> <%= number_to_currency(@service.price_hours, unit: "Â¥", separator: ".", delimiter: ",", precision: 0, round_mode: :up) %>/hr</h2>
      <%= cl_image_tag(@service.user.picture, { alt: @service.user.first_name, class: "card-show-user avatar-bordered"})%>
    </div>
  </div>
  <div class="flex-column p-5 b-none mt-3">
    <% if current_user == @service.user %>
      <div class="text-center w-75 align-center mx-auto">
        <%= render 'edit' %>
        <%= link_to "delete", service_path(@service), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-danger mt-2 align-center" %>
      </div>
    <% else %>
      <%= render "bookings/new_form", service: [@service, @booking] %> <%#passing to partial% %>
      <div class="service-tag">
        <% @service.tag_list.each do |tag| %>
          <span><%= tag %></span>
        <% end %>
      </div>
    <% end %>  </div>
  <hr>
  <div>
    <p><%= @service.description %></p>
  </div>
</div>
